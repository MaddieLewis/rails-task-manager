<h1 style="display:flex; justify-content: center">Show</h1>
<div class="box" style="display:flex; align-items: center; justify-content: space-around;">
  <div class="completed">
    <% if @task.completed %>
      <%= link_to task.title, task_path(task) %>
      <i class="fas fa-circle"></i>
    <% else %>
      <i class="far fa-circle" style="font-size:24px; color: black;"></i>
    <% end %>
  </div>
  <div class="details_all">
    <h2><%= @task.title %></h2>
    <p><%= @task.details %></p>
  </div>
</div>
